<div id="id01" class="modal">-->
    
    <form class="modal-content animate" action="send" method="POST">
        <div class="imgcontainer">
          <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
        
        </div>
    
        <div class="container">
          <label for="senderpk"><b>Sender's Public Key</b></label>
          <input type="text" placeholder="Enter Sender's Public Key" class="form-control" name="senderKey" required>
    
          <label for="receiverpk"><b>Email</b></label>
          <input type="text" placeholder="Enter Receiver's Public Key" class="form-control" name="receiverKey" required>
    
          <label for="msg"><b>Message</b></label>
          <input type="text" placeholder="Message"class="form-control" name="message" required>
    
          
            
          <button type="submit">Send</button>
          
        </div>
    
        
      </form>
    </div>
    
    <script>
    // Get the modal
    var modal = document.getElementById('id01');
    
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    </script>
    
    </body>
