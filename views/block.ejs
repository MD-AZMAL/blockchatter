<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <style>
        .card-deck{background-color:powderblue;}
        .charlim {
            width: 500ch;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
        .testimonial-group > .row {
            overflow-x: auto;
            white-space: nowrap;
        }
        .testimonial-group > .row > .col-sm-4 {
            display: inline-block;
            float: none;
        }
    </style>
</head>

<body>
    <div class="container container-fluid">
        <div class="jumbotron jumbotron-fluid">
                <button type="button" class="btn btn-info">MINE</button>
                <button type="button" class="btn btn-info">UPDATE</button>
                <button type="button" class="btn btn-info">VALIDATE</button>
                <a type="button" class="btn btn-info" href="/compose">COMPOSE</a>
            </div>
            <div class="row flex-row flex-nowrap">
                <%for(let i = 0 ; i < blocks.length ; i++) { %>
                <div class="col-sm-4">
                    <div class="card card-block">
                        <div class="card-body">
                            <div class="card-title"><h3>Block : #<%=blocks[i].index %></h3></div>
                            <div class="card-text"><h5><b>Nonce : </b><%=blocks[i].nonce %></h5> </div>
                            <div class="card-text"><h5>Sender Key : <%=blocks[i].data.senderKey %></h5> </div>
                            <div class="card-text"><h5>Receiver Key : <%=blocks[i].data.receiverKey %></h5> </div>
                            <div class="card-text"><h5>Message :</h5> <p class="charlim"><%=blocks[i].data.message %></p></div>
                            <div class="card-text"><h5><b>Prev Hash :</b><p> <%=blocks[i].previousHash %></h5></p> </div>
                            <div class="card-text"><h5><b>Hash :</b><p><%=blocks[i].hash %></p></h5> </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
    </div>
</body>

</html>
